doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Admin Dashboard - View Reservations
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap", rel="stylesheet")
    style.
      body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
      }
      table {
        width: 80%;
        margin-top: 20px;
        border-collapse: collapse;
      }
      th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      th {
        background-color: #007bff;
        color: white;
      }
      .button {
        display: inline-block;
        margin: 5px;
        padding: 5px 10px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
      }
      .button:hover {
        background-color: #0056b3;
      }
    script.
      function deleteReservation(reservationId) {
        if (confirm('Are you sure you want to delete this reservation?')) {
          fetch(`/reservations/delete/${reservationId}`, { method: 'DELETE' })
            .then(response => {
              if (response.ok) {
                location.reload();
              } else {
                alert('Failed to delete reservation');
              }
            });
        }
      }

  body
    .container
      h1 Admin Dashboard - View Reservations
      // Restul butoanelor È™i linkurilor
      if reservations.length
        table
          thead
            tr
              th User
              th Room
              th Date
              th Start Time
              th End Time
              th Actions
          tbody
            each reservation in reservations
              tr
                td= reservation.user.username
                td= reservation.room ? reservation.room.name : 'Room not assigned'
                td= reservation.date.toDateString()
                td= reservation.startTime
                td= reservation.endTime
                td
                 button(onclick=`deleteReservation('${reservation._id}')`) Delete
      else
        p No reservations found.
